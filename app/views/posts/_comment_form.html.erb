<div class="nested-form-wrapper bg-gray-200 p-5 my-5" data-new-record="<%= f.object.new_record? %>">
  <div class="my-5">
    <%= f.label :author %>
    <%= f.text_field :author, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <button type="button" data-action="nested-form#remove" class="bg-white text-black rounded-lg py-3 px-5 ">Remove comment</button>

  <%= f.hidden_field :_destroy %>
</div>